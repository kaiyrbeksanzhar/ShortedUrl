@model BLL.AdditionalModels.UrlMdl

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="number" name="Id" value="@Model.Id" class="hidden" />
    <div class="container">
        <h2>Список Url-ов</h2>
        <p>The .table-striped class adds zebra-stripes to a table:</p>
        <div>
            <label>Длинный URL</label>
            <input name="FullUrl" class="w-100 p-2 w100" type="text" value="@Model.FullUrl" />
        </div>
        <div>
            <label>Сокращенный URL</label>
            <input name="ShortUrl" class="w-100 p-2 w100" type="text" value="@Model.ShortUrl" />
        </div>

    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить изменение" class="w100 btn btn-default" />
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "Index")
</div>
